<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotCodeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/otp_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:visibility="gone"
            android:background="@drawable/transparent_background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textColor="#66000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Chúng tôi đã gửi một mã code đến email của bạn."
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_email"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="abc@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center">
        <EditText
            android:id="@+id/tv_code1"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_code2"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_code3"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_code4"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_code5"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_code6"
            android:background="@drawable/edit_text_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verity"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Verity"
        android:textColor="@color/white"
        android:background="@color/oneColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Resend Verification Code"
        android:visibility="gone" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="#66000000"
            android:text="Bạn đã có tài khoản ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sign_up"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/oneColor"
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>